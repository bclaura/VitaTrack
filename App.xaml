<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VitaTrack"
             x:Class="VitaTrack.App">
    <Application.Resources>
        <ResourceDictionary>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="LeagueSpartan" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="Black" />
            </Style>

            <local:ZeroToBoolConverter x:Key="ZeroToBoolConverter"/>
            <local:FavoriteIconConverter x:Key="FavoriteIconConverter" />
            <local:MessageColorConverter x:Key="MessageColorConverter" />
            <local:MessageAlignmentConverter x:Key="MessageAlignmentConverter" />
            <local:ReadIconConverter x:Key="ReadIconConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            

        </ResourceDictionary>
    </Application.Resources>
</Application>
