<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VitaTrack.WelcomePage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Spacing="20"
                         Padding="0"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Image Source="vitaline2.png"
               HeightRequest="180"
               HorizontalOptions="Center"
               Aspect="AspectFit"
               Margin="0,0,0,0"/>

        <Label Text="Vita"
           FontSize="43"
           FontFamily="LeagueSpartan"
           FontAttributes="None"
           TextColor="Black"
           HorizontalTextAlignment="Center" 
           Margin="-11,-25,0,0"/>

        <Label Text="Track"
           FontSize="43"
           FontFamily="LeagueSpartan"
           FontAttributes="None"
           TextColor="Black"
           HorizontalTextAlignment="Center" 
           Margin="10,-35,0,0"/>


        <Button Text="Log In"
        FontFamily="LeagueSpartan"
        FontSize="25"
        FontAttributes="Bold"
        Padding="0,-6,0,0"
        BackgroundColor="#006CFF"
        TextColor="White"
        CornerRadius="25"
        HeightRequest="50"
        WidthRequest="220"
        Margin="0,0,0,0"
        Clicked="OnLoginClicked" />

        <Button Text="Sign Up"
        FontFamily="LeagueSpartan"
        FontSize="25"
        FontAttributes="Bold"
        Padding="0,-6,0,0"
        BackgroundColor="#D9E7FF"
        TextColor="#006CFF"
        CornerRadius="25"
        HeightRequest="50"
        WidthRequest="220"
        Clicked="OnSignupClicked"
        Margin="0,-13,0,0"/>
    </VerticalStackLayout>
</ContentPage>