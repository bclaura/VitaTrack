<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VitaTrack.SignUpPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- Back & Title -->
            <HorizontalStackLayout>
                <ImageButton Source="back_icon.png"
                             HeightRequest="24"
                             WidthRequest="24"
                             BackgroundColor="Transparent"
                             Clicked="OnBackClicked"/>
                <Label Text="New Account"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#006CFF"
                       VerticalOptions="Center"
                       Margin="85,0,0,0"
                       HorizontalOptions="CenterAndExpand" />
            </HorizontalStackLayout>

            <!-- Full Name -->
            <Label Text="Full Name"
               FontSize="18"
               FontFamily="LeagueSpartan"
               FontAttributes="Bold"
               TextColor="Black" />

            <Frame BackgroundColor="#E9F1FF"
               CornerRadius="12"
               HasShadow="False"
               Padding="5"
               BorderColor="Transparent"
               HeightRequest="50"
               Margin="0,-10,0,0">

                <Entry x:Name="fullNameEntry"
               Placeholder="Full Name"
               BackgroundColor="Transparent"
               TextColor="#006CFF"
               FontSize="16"
               Margin="0"/>
            </Frame>

            <!-- Password Entry with Eye -->
            <Label Text="Password"
				FontSize="18"
                FontFamily="LeagueSpartan"
				FontAttributes="Bold"
				TextColor="Black"/>


            <Frame BackgroundColor="#E9F1FF"
				CornerRadius="12"
				HasShadow="False"
				Padding="5"
				BorderColor="Transparent"
				HeightRequest="50"
				Margin="0,-10,0,0">

                <Grid>
                    <Entry x:Name="passwordEntry"
				Placeholder="*************"
				IsPassword="True"
				BackgroundColor="Transparent"
				/>

                    <ImageButton x:Name="eyeButton"
              Source="eye_icon_black.png"
              BackgroundColor="Transparent"
              HorizontalOptions="End"
              VerticalOptions="Center"
              HeightRequest="24"
              WidthRequest="24"
              Margin="0,0,5,0"
              Clicked="OnEyeClicked"/>
                </Grid>
            </Frame>

            <!-- Email Entry -->
            <Label Text="Email"
               FontSize="18"
               FontFamily="LeagueSpartan"
               FontAttributes="Bold"
               TextColor="Black" />

            <Frame BackgroundColor="#E9F1FF"
               CornerRadius="12"
               HasShadow="False"
               Padding="5"
               BorderColor="Transparent"
               HeightRequest="50"
               Margin="0,-10,0,0">

                <Entry x:Name="emailEntry"
               Placeholder="example@example.com"
               BackgroundColor="Transparent"
               TextColor="#006CFF"
               FontSize="16"
               Margin="0"/>
            </Frame>

            <!-- Mobile Number -->
            <Label Text="Mobile Number"
               FontSize="18"
               FontFamily="LeagueSpartan"
               FontAttributes="Bold"
               TextColor="Black" />
            <Frame BackgroundColor="#E9F1FF"
               CornerRadius="12"
               HasShadow="False"
               Padding="5"
               BorderColor="Transparent"
               HeightRequest="50"
               Margin="0,-10,0,0">

                <Entry x:Name="mobileEntry"
               Placeholder="+40(123)4567890"
               BackgroundColor="Transparent"
               TextColor="#006CFF"
               FontSize="16"
               Margin="0"/>
            </Frame>

            <!-- Date of Birth -->
            <Label Text="Date Of Birth"
               FontSize="18"
               FontFamily="LeagueSpartan"
               FontAttributes="Bold"
               TextColor="Black" />
            <Frame BackgroundColor="#E9F1FF"
               CornerRadius="12"
               HasShadow="False"
               Padding="5"
               BorderColor="Transparent"
               HeightRequest="50"
               Margin="0,-10,0,0">

                <Entry x:Name="dobEntry"
               Placeholder="DD / MM / YYYY"
               BackgroundColor="Transparent"
               TextColor="#006CFF"
               FontSize="16"
               Margin="0"/>
            </Frame>

            <!-- Terms -->
            <Label Text="By continuing, you agree to"
                   FontSize="14"
                   FontFamily="LeagueSpartan"
                   HorizontalTextAlignment="Center"
                   Margin="0,-5,0,0"/>

            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,-20,0,0">
                <Label Text="Terms of Use"
                       FontSize="14"
                       FontFamily="LeagueSpartan"
                       TextColor="#006CFF"/>
                <Label Text=" and " FontSize="14" FontFamily="LeagueSpartan"/>
                <Label Text="Privacy Policy"
                       FontFamily="LeagueSpartan"
                       FontSize="14"
                       TextColor="#006CFF"/>
            </HorizontalStackLayout>

            <!-- Sign Up button -->
            <Button Text="Sign Up"
            FontFamily="LeagueSpartan"
            FontSize="25"
            FontAttributes="Bold"
            Padding="0,-6,0,0"
            BackgroundColor="#006CFF"
            TextColor="White"
            CornerRadius="25"
            HeightRequest="50"
            WidthRequest="220"
            Margin="0,-10,0,0"
            Clicked="OnSignUpClicked"/>

            <!-- Sign up with -->
            <Label Text="or sign up with"
                   FontSize="14"
                   FontFamily="LeagueSpartan"
                   HorizontalTextAlignment="Center" 
                   Margin="0,-10,0,0"/>

            <!-- Icons -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" Margin="0,-15,0,0">
                <ImageButton Source="google_icon.png" HeightRequest="40" WidthRequest="40" BackgroundColor="Transparent"/>
                <ImageButton Source="facebook_icon.png" HeightRequest="40" WidthRequest="40" BackgroundColor="Transparent"/>
                <ImageButton Source="print_icon.png" HeightRequest="40" WidthRequest="40" BackgroundColor="Transparent"/>
            </HorizontalStackLayout>

            <!-- Already have account -->
            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,-10,0,0">
                <Label Text="Already have an account? "
                       FontSize="14"
                       FontFamily="LeagueSpartan"/>
                <Label Text="Log in"
                   FontSize="14"
                   TextColor="#006CFF"
                   FontFamily="LeagueSpartan"
                   FontAttributes="Bold">       
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
