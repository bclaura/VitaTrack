<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VitaTrack.MessageDoctorPage"
             BackgroundColor="#F9F9FB">
    <Grid RowDefinitions="*, Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="30" Spacing="20">

                <Grid ColumnDefinitions="Auto,*,Auto" Padding="0,-10,0,0">
                    <!-- Back button -->
                    <ImageButton Source="back_icon.png"
                 BackgroundColor="Transparent"
                 WidthRequest="30"
                 HeightRequest="30"
                 Clicked="OnBackClicked"
                 Grid.Column="0"
                 VerticalOptions="Center"/>

                    <!-- Titlu "Select a doctor to chat" -->
                    <Label Text="Select a Doctor to Chat"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#2260FF"
               Grid.Column="1"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

                </Grid>

                <!-- Lista doctori -->
                <CollectionView x:Name="DoctorsCollectionView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15" Margin="0,10,0,0"
                   BorderColor="Transparent"
                   BackgroundColor="#CAD6FF"
                   CornerRadius="20">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnDoctorTapped" />
                                </Frame.GestureRecognizers>
                                <Grid ColumnDefinitions="Auto,*">
                                    <Image Source="{Binding ImagePath}"
                           WidthRequest="60"
                           HeightRequest="60"
                           Aspect="AspectFill"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Margin="0">
                           
                                        <Image.Clip>
                                            <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30" />
                                        </Image.Clip>
                                    </Image>

                         <VerticalStackLayout Grid.Column="1"
                         VerticalOptions="Center"
                         Spacing="2"
                         Margin="10,0,0,0">
                                        <Label Text="{Binding NameTitle}"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2260FF"
                           Margin="0,0,0,0"
                           />

                                    <Label Text="{Binding Specialization}"
                           FontSize="14"
                           TextColor="Black"
                           Margin="10,-5,0,0"
                           />
                            </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar: fixatÄƒ -->
        <Frame Grid.Row="1"
               BackgroundColor="#2260FF"
               CornerRadius="30"
               Padding="20,10"
               Margin="20"
               BorderColor="#E0E0E0"
               HasShadow="False"
               HorizontalOptions="Fill"
               VerticalOptions="End">

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="40">
                <ImageButton Source="nav_home_icon.png"
                             BackgroundColor="Transparent"
                             WidthRequest="30"
                             HeightRequest="30"
                             Clicked="OnHomeClicked"/>
                <ImageButton Source="nav_chat_icon_active.png"
                             BackgroundColor="Transparent"
                             WidthRequest="30"
                             HeightRequest="30" />
                <ImageButton Source="nav_profile_icon.png"
                             BackgroundColor="Transparent"
                             WidthRequest="30"
                             HeightRequest="30"
                             Clicked="OnProfileClicked"/>
                <ImageButton Source="nav_calendary_icon.png"
                             BackgroundColor="Transparent"
                             WidthRequest="30"
                             HeightRequest="30" 
                             Clicked="OnCalendaryClicked"/>
            </HorizontalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
