<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VitaTrack.ForgotPasswordPage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="20">

        <!-- Back Button -->
        <HorizontalStackLayout>
            <ImageButton Source="back_icon.png"
                         BackgroundColor="Transparent"
                         HeightRequest="24"
                         WidthRequest="24"
                         Clicked="OnBackClicked" />
            <Label Text="Reset Password"
                   FontSize="22"
                   FontFamily="LeagueSpartan"
                   FontAttributes="Bold"
                   TextColor="#006CFF"
                   Margin="60,0,0,0"
                   HorizontalOptions="CenterAndExpand" />
        </HorizontalStackLayout>

        <!-- Instructions -->
        <Label Text="Enter your email to reset your password."
               FontSize="14"
               FontFamily="LeagueSpartan"
               TextColor="Gray"
               HorizontalTextAlignment="Center"
               Margin="0,10,0,0"/>

        <!-- Email Entry -->
        <Label Text="Email"
               FontSize="18"
               FontFamily="LeagueSpartan"
               FontAttributes="Bold"
               TextColor="Black" />
        <Frame BackgroundColor="#E9F1FF"
               CornerRadius="12"
               HasShadow="False"
               Padding="5"
               BorderColor="Transparent"
               HeightRequest="50"
               Margin="0,-10,0,0">
            <Entry x:Name="emailEntry"
                   Placeholder="example@example.com"
                   BackgroundColor="Transparent"
                   TextColor="#006CFF"
                   FontSize="16"/>
        </Frame>

        <!-- Continue Button -->
        <Button Text="Continue"
                BackgroundColor="#006CFF"
                FontSize="25"
                TextColor="White"
                FontFamily="LeagueSpartan"
                FontAttributes="Bold"
                Padding="0,-6,0,0"
                CornerRadius="25"
                WidthRequest="220"
                HeightRequest="50"
                Margin="0,10,0,0"
                Clicked="OnContinueClicked"/>
    </VerticalStackLayout>
</ContentPage>
